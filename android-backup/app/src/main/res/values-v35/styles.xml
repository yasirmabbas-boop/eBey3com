<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Android 15 (API 35) specific overrides -->
    <!-- The windowOptOutEdgeToEdgeEnforcement flag is only available on API 35+ -->
    
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <!-- Ensure WebView respects system bar boundaries -->
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <!-- Opt-out of Android 15 edge-to-edge enforcement -->
        <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>
    </style>

    <!-- Splash screen theme for Android 15+ - also needs edge-to-edge opt-out -->
    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <item name="android:background">@drawable/splash</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <!-- Opt-out of Android 15 edge-to-edge enforcement -->
        <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>
    </style>
</resources>
